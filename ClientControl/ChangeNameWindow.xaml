<Window x:Class="ClientControl.ChangeNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientControl"
        mc:Ignorable="d"
        Title="ChangeNameWindow" Height="132.133" Width="288.92" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen" Topmost="True">
    <StackPanel Orientation="Vertical">
        <local:TitleBar DataContext="Change Name"/>
        <StackPanel Orientation="Horizontal" Margin="10 10 10 10">
            <TextBlock Text="Name: " Margin="0 0 10 0" VerticalAlignment="Center" FontSize="18"/>
            <TextBox Name="txtName" Width="200"/>
        </StackPanel>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Name="btnOK" Content="OK" Margin="10 10 10 10" Click="BtnOK_Click"/>
            <Button Name="btnCancel" Grid.Column="1" Content="Cancel" Margin="10 10 10 10" Click="BtnCancel_Click"/>
        </Grid>
    </StackPanel>
</Window>
